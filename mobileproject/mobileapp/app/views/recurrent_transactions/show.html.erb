<%- model_class = RecurrentTransaction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:startdate) %>:</strong></dt>
  <dd><%= @recurrent_transaction.startdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enddate) %>:</strong></dt>
  <dd><%= @recurrent_transaction.enddate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:period_id) %>:</strong></dt>
  <dd><%= @recurrent_transaction.period_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nextdate) %>:</strong></dt>
  <dd><%= @recurrent_transaction.nextdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @recurrent_transaction.customer_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              recurrent_transactions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_recurrent_transaction_path(@recurrent_transaction), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              recurrent_transaction_path(@recurrent_transaction),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
